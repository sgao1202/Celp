<div class="container">
    <div class="row">
        <div class="col">
            <div class="mt-3">
                <a href="/restaurants">
                    <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z"/>
                    </svg>
                    <span class="ml-1">Back</span>
                </a>
            </div>
            <div class="border-bottom mt-3">
                <h1 class="display-4 font-weight-bold">{{restaurant.name}} 
                    {{#if (checkListMem restaurant._id user.favoritedRestaurants)}}
                    <i class = "favbtn fa fa-star filled" data-rid = "{{restaurant._id}}" data-uid = "{{user._id}}"></i>
                    {{else}}
                    <i class = "favbtn fa fa-star-o" data-rid = "{{restaurant._id}}" data-uid = "{{user._id}}"></i>
                    {{/if}}
                </h1>

                <span class = "error font-italic" hidden></span>
                <h2 id="address" class="font-italic h5">{{restaurant.address}}</h2>
                <h2 class="text-secondary h5">{{restaurant.cuisine}}</h2>
                {{#if restaurant.link}}
                <h2 class="text-secondary h5"><a href={{restaurant.link}} target="_blank">Link to Yelp</a></h2>
                {{else}}
                <h2 class="text-secondary h5"><span>No Yelp Link Available</span></h2>
                {{/if}}
            </div>
            <div class="mt-3">
                <div class="row mb-4">
                    <div class="col-3">
                        <h3 class="font-weight-bold mb-4">Reviews</h3>    
                    </div>
                    <div class="col">
                        <a href="/reviews/writeareview/{{restaurant._id}}" class="btn btn-primary">Write a Review</a>
                    </div>
                </div>
                <ul class="list-group list-group-flush">
                    {{#each reviews}}
                    <li class="list-group-item mb-4">
                        <div class="container">
                            <div class="row">
                                <div class="col col-4 p-0">
                                    <h4 class="font-weight-bold h5">{{this.name}}</h4>
                                    <div>
                                        {{#each filledStars}} 
                                            <span>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill star" viewBox="0 0 16 16">
                                                    <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.283.95l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                                                </svg>
                                            </span>
                                        {{/each}}
                                        {{#each unfilledStars}}
                                            <span>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill star" viewBox="0 0 16 16">
                                                    <path fill-rule="evenodd" d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.523-3.356c.329-.314.158-.888-.283-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767l-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288l1.847-3.658 1.846 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.564.564 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
                                                </svg>
                                            </span>
                                        {{/each}}
                                    </div>
                                    <div>
                                        {{#each filledDollars}}
                                            <span class="dollar">
                                                $
                                            </span>
                                        {{/each}}
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="row">
                                        <div class="col">
                                            <div class="container mb-3">
                                                <span>
                                                    {{#if this.metrics.distancedTables}}
                                                       <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" class="icon_svg check-mark"><path d="M9.46 17.52a1 1 0 01-.71-.29l-4-4a1.004 1.004 0 111.42-1.42l3.25 3.26 8.33-8.34a1.004 1.004 0 011.42 1.42l-9 9a1 1 0 01-.71.37z"></path></svg>
                                                    {{else}}
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" class="icon_svg x-mark"><path d="M13.41 12l5.3-5.29a1.004 1.004 0 10-1.42-1.42L12 10.59l-5.29-5.3a1.004 1.004 0 00-1.42 1.42l5.3 5.29-5.3 5.29a1 1 0 000 1.42 1 1 0 001.42 0l5.29-5.3 5.29 5.3a1 1 0 001.42 0 1 1 0 000-1.42L13.41 12z"></path></svg>            
                                                    {{/if}}
                                                </span>
                                                <span class="font-weight-bold">Distanced Tables</span>
                                            </div>
                                            <div class="container">
                                                <span>
                                                    {{#if this.metrics.maskedEmployees}}
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" class="icon_svg check-mark"><path d="M9.46 17.52a1 1 0 01-.71-.29l-4-4a1.004 1.004 0 111.42-1.42l3.25 3.26 8.33-8.34a1.004 1.004 0 011.42 1.42l-9 9a1 1 0 01-.71.37z"></path></svg>
                                                    {{else}}
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" class="icon_svg x-mark"><path d="M13.41 12l5.3-5.29a1.004 1.004 0 10-1.42-1.42L12 10.59l-5.29-5.3a1.004 1.004 0 00-1.42 1.42l5.3 5.29-5.3 5.29a1 1 0 000 1.42 1 1 0 001.42 0l5.29-5.3 5.29 5.3a1 1 0 001.42 0 1 1 0 000-1.42L13.41 12z"></path></svg>            
                                                    {{/if}}
                                                </span>
                                                <span class="font-weight-bold">Masked Employees</span>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="container mb-3">
                                                <span>
                                                    {{#if this.metrics.noTouchPayment}}
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" class="icon_svg check-mark"><path d="M9.46 17.52a1 1 0 01-.71-.29l-4-4a1.004 1.004 0 111.42-1.42l3.25 3.26 8.33-8.34a1.004 1.004 0 011.42 1.42l-9 9a1 1 0 01-.71.37z"></path></svg>
                                                    {{else}}
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" class="icon_svg x-mark"><path d="M13.41 12l5.3-5.29a1.004 1.004 0 10-1.42-1.42L12 10.59l-5.29-5.3a1.004 1.004 0 00-1.42 1.42l5.3 5.29-5.3 5.29a1 1 0 000 1.42 1 1 0 001.42 0l5.29-5.3 5.29 5.3a1 1 0 001.42 0 1 1 0 000-1.42L13.41 12z"></path></svg>            
                                                    {{/if}}
                                                </span>
                                                <span class="font-weight-bold">No Touch Payment</span>
                                            </div>
                                            <div class="container">
                                                <span>
                                                    {{#if this.metrics.outdoorSeating}}
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" class="icon_svg check-mark"><path d="M9.46 17.52a1 1 0 01-.71-.29l-4-4a1.004 1.004 0 111.42-1.42l3.25 3.26 8.33-8.34a1.004 1.004 0 011.42 1.42l-9 9a1 1 0 01-.71.37z"></path></svg>
                                                    {{else}}
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" class="icon_svg x-mark"><path d="M13.41 12l5.3-5.29a1.004 1.004 0 10-1.42-1.42L12 10.59l-5.29-5.3a1.004 1.004 0 00-1.42 1.42l5.3 5.29-5.3 5.29a1 1 0 000 1.42 1 1 0 001.42 0l5.29-5.3 5.29 5.3a1 1 0 001.42 0 1 1 0 000-1.42L13.41 12z"></path></svg>            
                                                    {{/if}}
                                                </span>
                                                <span class="font-weight-bold">Outdoor Seating</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <p class="text-left lead">
                                    <span>
                                        {{this.text}}
                                    </span>
                                </p>
                            </div>
                            <div class = "dblclick container">
                                {{#if (checkListMem ../user._id this.likes)}}
                                <i class = "likebtn fa fa-thumbs-up filled" data-rid = "{{this.id}}" data-uid = "{{../user._id}}"></i>
                                {{else}}
                                <i class = "likebtn fa fa-thumbs-up" data-rid = "{{this.id}}" data-uid = "{{../user._id}}"></i>
                                {{/if}}
                                <span class = "likes">{{this.likes.length}}</span>

                                {{#if (checkListMem ../user._id this.dislikes)}}
                                <i class = "dislikebtn fa fa-thumbs-down filled" data-rid = "{{this.id}}" data-uid = "{{../user._id}}"></i>
                                {{else}}
                                <i class = "dislikebtn fa fa-thumbs-down" data-rid = "{{this.id}}" data-uid = "{{../user._id}}"></i>
                                {{/if}}
                                <span class = "dislikes">{{this.dislikes.length}}</span>
                                
                                <div class = "float-right">
                                    {{#if (checkListMem ../user._id this.reported)}}
                                    <button class="btn btn-secondary reportbtn" data-rid = "{{this.id}}" data-uid = "{{../user._id}}" data-restid = "{{../restaurant._id}}" >
                                        <i class = "fa fa-exclamation" aria-hidden = "true"></i>
                                        <span class = "report-text">Unreport</span>
                                    </button>
                                    {{else}}
                                    <button class="btn btn-danger active reportbtn" data-rid = "{{this.id}}" data-uid = "{{../user._id}}" data-restid = "{{../restaurant._id}}" >
                                        <i class = "fa fa-exclamation" aria-hidden = "true"></i>
                                        <span class = "report-text">Report</span>
                                    </button>
                                    
                                    {{/if}}
                                </div>
                                <div class = "error font-italic" hidden></div>
                                <div class="msg alert alert-success" role="alert" hidden></div>
                            </div>
                            
                        </div>
                        <div class="container mb-5">
                            <div class="card">
                                <div class="card-header">
                                    Comments
                                </div>
                                <ul class="list-group" id="comment-list-{{this.id}}">
                                    {{#each comments}} {{> comment_item}} {{/each}}
                                </ul>
                                <div class="card-footer">
                                    {{#if ../authenticated}}
                                        <form class="comment-form" data-review="{{this.id}}">
                                            <div class="form-group">
                                                <label for="comment-input-{{this.id}}"></label>
                                                <input type="text" class="form-control" id="comment-input-{{this.id}}" name="comment" placeholder="Enter a comment here" >
                                                <div class="invalid-feedback">
                                                    Enter a comment
                                                </div>
                                            </div>
                                            <button class="btn btn-primary">Add a Comment</button>
                                        </form>
                                    {{else}}
                                        <p class="text-muted">Log in to comment</p>
                                    {{/if}}
                                </div>
                                
                            </div>
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col col-5 mt-5 ml-3">
            <div class="container p-3 border border-light rounded shadow-sm mb-5">
                <div class="row ml-3">
                    <h3 class="font-weight-bold">COVID-19 Safety Measures</h3>
                </div>
                <div class="row mt-3">
                    <div class="col col-8">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-star-fill text-primary" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.283.95l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                        </svg>
                        <span class="ml-2">
                            Rating
                        </span>
                    </div>
                    <div class="col">
                        <span id = "rating">
                            {{#if reviews.length}}
                            {{restaurant.rating}}
                            {{else}}
                            No Reviews
                            {{/if}}
                        </span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col col-8">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cash text-primary" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M15 4H1v8h14V4zM1 3a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h14a1 1 0 0 0 1-1V4a1 1 0 0 0-1-1H1z"/>
                            <path d="M13 4a2 2 0 0 0 2 2V4h-2zM3 4a2 2 0 0 1-2 2V4h2zm10 8a2 2 0 0 1 2-2v2h-2zM3 12a2 2 0 0 0-2-2v2h2zm7-4a2 2 0 1 1-4 0 2 2 0 0 1 4 0z"/>
                        </svg>
                        <span class="ml-2">
                            Price
                        </span>
                    </div>
                    <div class="col">
                        <span>
                            {{#if reviews.length}}
                            {{restaurant.price}}
                            {{else}}
                            No Reviews
                            {{/if}}
                        </span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col col-8">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-right-square-fill text-primary" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm2.5 8.5a.5.5 0 0 1 0-1h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5z"/>
                        </svg>
                        <span class="ml-2">
                            Socially Distanced Tables
                        </span>
                    </div>
                    <div class="col">
                        <span id = "distanced">
                            {{#if reviews.length}}
                            {{restaurant.distancedTables}}%
                            {{else}}
                            No Reviews
                            {{/if}}
                        </span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col col-8">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-emoji-laughing-fill text-primary" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zM7 6.5c0 .501-.164.396-.415.235C6.42 6.629 6.218 6.5 6 6.5c-.218 0-.42.13-.585.235C5.164 6.896 5 7 5 6.5 5 5.672 5.448 5 6 5s1 .672 1 1.5zm5.331 3a1 1 0 0 1 0 1A4.998 4.998 0 0 1 8 13a4.998 4.998 0 0 1-4.33-2.5A1 1 0 0 1 4.535 9h6.93a1 1 0 0 1 .866.5zm-1.746-2.765C10.836 6.896 11 7 11 6.5c0-.828-.448-1.5-1-1.5s-1 .672-1 1.5c0 .501.164.396.415.235.165-.106.367-.235.585-.235.218 0 .42.13.585.235z"/>
                            </svg>
                            <span class="ml-2">Masked Employees</span>
                    </div>

                    <div class="col">
                        <span id = "masked">
                            {{#if reviews.length}}
                            {{restaurant.maskedEmployees}}%
                            {{else}}
                            No Reviews
                            {{/if}}
                        </span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col col-8">
                        <span>
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-credit-card-fill text-primary" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v1H0V4z"/>
                                <path fill-rule="evenodd" d="M0 7v5a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7H0zm3 2a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1h1a1 1 0 0 0 1-1v-1a1 1 0 0 0-1-1H3z"/>
                            </svg>
                            <span class="ml-2">
                                No Touch Payment
                            </span>
                        </span>
                    </div>
                    <div class="col">
                        <span id = "noTouch">
                            {{#if reviews.length}}
                            {{restaurant.noTouchPayment}}%
                            {{else}}
                            No Reviews
                            {{/if}}
                        </span>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col col-8">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-signpost-2-fill text-primary" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M7 1.414V16h2V1.414a1 1 0 0 0-2 0z"/>
                            <path d="M1 3a1 1 0 0 1 1-1h11.5a1 1 0 0 1 .8.4l.975 1.3a.5.5 0 0 1 0 .6L14.3 5.6a1 1 0 0 1-.8.4H2a1 1 0 0 1-1-1V3zm14 5a1 1 0 0 0-1-1H2.5a1 1 0 0 0-.8.4L.725 8.7a.5.5 0 0 0 0 .6l.975 1.3a1 1 0 0 0 .8.4H14a1 1 0 0 0 1-1V8z"/>
                        </svg>
                        <span class="ml-2">
                            Outdoor Seating
                        </span>
                    </div>

                    <div class="col">
                        <span id = "outdoor">
                            {{#if reviews.length}}
                            {{restaurant.outdoorSeating}}%  
                            {{else}}
                            No Reviews
                            {{/if}}
                        </span>
                    </div>
                </div>
            </div>
            <div class="container shadow-sm p-3 mb-5 border border-light rounded">
                <h3 class="font-weight-bold">Images</h3>
                {{#if photos}}
                    <div id="carouselExampleIndicators" class="carousel slide my-3" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            {{#each photos}}
                                <div class="carousel-item">
                                    <img src="{{this}}" class="d-block w-100 p-3" alt="img-{{@index}}">
                                </div>
                            {{/each}}
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                {{else}}
                    <h4 class="h5 text-secondary">No images available...</h4>
                {{/if}}
            </div>
            <div id="map-parent" class="container shadow-sm p-3 border border-light rounded">
                <h3 class="font-weight-bold">Location</h3>
                <div id="map" class="container"></div>
            </div>
        </div>
    </div>
</div>